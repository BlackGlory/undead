{
  "name": "@blackglory/undead",
  "version": "0.2.0",
  "description": "A program launcher that retries with exponential backoff when the exit code is non-zero.",
  "keywords": [],
  "files": [
    "lib"
  ],
  "bin": {
    "undead": "lib/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "repository": "git@github.com:BlackGlory/undead.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "deduplicate": "yarn-deduplicate",
    "prepare": "ts-patch install -s",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "vitest run",
    "dev": "tsx src/cli.ts",
    "prepublishOnly": "run-s clean prepare build",
    "clean": "rimraf lib",
    "build": "tsc --project tsconfig.build.json",
    "smoke": "node lib/cli.js --help",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean prepare lint build test smoke",
      "commit-msg": "commitlint --config commitlint.config.cjs --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^10.0.1",
    "@types/node": "22",
    "eslint": "^10.0.0",
    "extra-exec": "^0.1.5",
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "return-style": "^3.0.1",
    "rimraf": "6.1.2",
    "standard-version": "^9.5.0",
    "ts-patch": "^3.3.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.55.0",
    "typescript-transform-paths": "^3.5.6",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@blackglory/prelude": "^0.4.0",
    "commander": "^14.0.3",
    "extra-filesystem": "^0.6.1",
    "extra-retry": "^0.4.6"
  }
}
